{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"include": ["./**/*.ts", "./**/*.js"],
		"ignoreUnknown": false,
		"ignore": ["dist", "node_modules", "coverage", "test-results.xml"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"recommended": true,
				"noUnusedImports": "error",
				"useImportExtensions": {
					"level": "error",
					"options": {
						"suggestedExtensions": {
							"ts": {
								"module": "js",
								"component": "js"
							}
						}
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
